<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thekedar Worker Selection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-white shadow-sm">
        <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <img class="h-8 w-auto" src="https://ai-public.creatie.ai/gen_page/logo_placeholder.png" alt="Logo">
                    <span class="ml-3 text-xl font-semibold text-gray-900">Thekedar Worker Management</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-lg shadow-sm p-6 sm:p-8">
            
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Select Workers</h2>
            <p class="text-gray-600">Add workers to your team by selecting from the list below.</p>

            <!-- Thekedar ID -->
            <div class="bg-gray-50 rounded-lg p-4 mb-6 border border-gray-200">
                <div class="flex items-center">
                    <i class="fas fa-id-badge text-indigo-500 text-xl mr-3"></i>
                    <div>
                        <p class="text-sm text-gray-500">Current Thekedar ID</p>
                        <p class="text-lg font-semibold text-gray-900"><%= currUser.id %></p>
                    </div>
                </div>
            </div>

            <!-- Worker Selection Form -->
            <form class="space-y-6" action="/add/workers/to/project/<%= thekedarId %>/<%= projectId %>" method="post">
                <div>
                    <label for="workerSelect" class="block text-sm font-medium text-gray-700">Choose Workers:</label>
                    <select id="workerSelect" name="workerIds" multiple class="block w-full pl-3 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 rounded-md">
                        <% workers.forEach(worker => { %>
                            <option value="<%= worker._id %>">
                                <%= worker.name %> (Skills: <%= worker.skills.join(", ") %>)
                            </option>
                        <% }) %>
                    </select>
                    <p class="text-xs text-gray-500 mt-1">Hold CTRL (Windows) or CMD (Mac) to select multiple workers.</p>
                </div>

                <button class="w-full bg-indigo-600 text-white px-4 py-3 text-sm font-medium rounded-md hover:bg-indigo-700">
                    <i class="fas fa-plus-circle mr-2"></i> Add Workers
                </button>
            </form>

            <!-- Success Message -->
            <div id="feedback" class="mt-8 hidden">
                <div class="rounded-lg bg-green-50 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-green-800">Workers successfully added to your team.</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <button type="button" onclick="document.getElementById('feedback').classList.add('hidden')" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-100">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 mt-12">
        <div class="max-w-8xl mx-auto py-6 px-4 text-center text-gray-500 text-sm">
            &copy; 2024 Thekedar Worker Management. All rights reserved.
        </div>
    </footer>

</body>
</html>
